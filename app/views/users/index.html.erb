<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= gravatar_for(user) %>
        <%= link_to user.name, user %></br>
        <%= link_to "Add Friend", friendship_create_path(:user2_id => user.id), :method => :get %> </br>

        <%= link_to "Become a Neighbor", "#" %></br>
        <%= user.profile %>
      </li>
  <% end %>
</ul>

<%= will_paginate %>
