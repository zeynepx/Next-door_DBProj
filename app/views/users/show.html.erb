<% provide(:title, @user.name) %>
<h2>Friends</h2>
<ul>
  <% for friend in @user.both_side_friends %>
      <li>
        <%=h friend.name %>
        (<%= link_to "remove", friendship_path(:id => friend.id), :method => :delete %>)
      </li>
  <% end %>
</ul>

<h2>Friend Requests</h2>
<ul>
  <% @user.requested_friendships.each do |request| %>
      <li>
        <%= request.email %>
        <%= link_to "Accept", friendship_path(:id => request), :method => "put" %>
        <%= link_to "Decline", friendship_path(:id => request), :method => :delete %>
      </li>
  <% end %>
</ul>

<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        </br>

        <% if not (@user.both_side_friends.include?(current_user) | @user.pending_friends.include?(current_user)) %>
            <%= link_to "Add Friend", friendships_path(:friend_id => @user.id), :method => :post %>
        <% end %>



      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>